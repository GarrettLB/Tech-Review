{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/yourposts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      {{format_date post.time}}
    </p>
  </div>
</div>
{{/each}}

<button id="newpost" class="btn btn-primary">New Post</button>

<script src="/js/newpost.js"></script>